{% extends "__layout.twig" %}
{% import "_macros.twig" as macros %}

{% block content %}
  <h1>{{ object.title }}</h1>
  <ul class="nav nav-pills mb-3">
    <li class="nav-item">
      {{ macros.btn("Картинка", '/type-flowers/' ~ object.id ~ '/image',  'outline-primary') }}
    </li>
    <li class="nav-item ms-2">
      {{ macros.btn("Описание", '/type-flowers/' ~ object.id ~ '/info',   'outline-primary') }}
    </li>
  </ul>
  {% if object.image %}
    <img src="{{ object.image }}" class="img-fluid mb-3" alt="{{ object.title }}">
  {% endif %}
  <h4>Полная информация</h4>
  <p>{{ object.info }}</p>
{% endblock %}
